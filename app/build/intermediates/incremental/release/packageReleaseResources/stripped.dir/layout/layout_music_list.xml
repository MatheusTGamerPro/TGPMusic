<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/tools"
    android:id="@+id/coordinator"
    android:layout_height="60dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    tools:context="com.matheustgp.adapters.MusicListAdapter">
    
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        
        <ImageView
            android:id="@+id/musicLogo"
            android:layout_height="match_parent"
            android:layout_width="45dp"
            android:scaleType="fitCenter"
            android:src="@drawable/music_icon"/>
        
        <TextView
            android:id="@+id/txtMusicName"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/musicLogo"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:text="Industry Baby Remix"
            android:textStyle="bold|italic"/>
        
        <TextView
            android:id="@+id/txtMusicArtist"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/musicLogo"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:text="Lil Nas X"
            android:textSize="10dp"/>
        
    
    </RelativeLayout>
    

</LinearLayout>