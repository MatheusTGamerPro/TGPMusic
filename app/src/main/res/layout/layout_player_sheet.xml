<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_height="65dp"
    android:layout_width="match_parent"
    android:orientation="horizontal">
    
    <ProgressBar
        android:id="@+id/pgbProgress"
        android:layout_height="10dp"
        android:layout_width="match_parent"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="25"
        android:value="10"/>
    
    <ImageView
        android:id="@+id/musicLogoSheet"
        android:layout_below="@id/pgbProgress"
        android:layout_height="match_parent"
        android:layout_width="45dp"
        android:scaleType="centerInside"
        android:src="@drawable/music_icon"/>
    
    <TextView
        android:id="@+id/musicTitle"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/musicLogoSheet"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:text="Nenhuma Musica Selecionada"
        android:textColor="#fff4ffff"
        android:textSize="12dp"/>
    
    <TextView
        android:id="@+id/musicArtist"
        android:layout_below="@id/musicTitle"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/musicLogoSheet"
        android:layout_width="wrap_content"
        android:text="(Nenhum artist encontrado)"
        android:textColor="#fff4ffff"
        android:textSize="10dp"/>
    
    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_width="35dp"
        android:src="@drawable/play_music_icon_1"/>
    

</RelativeLayout>